<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/task_de_backIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/task_de_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_black" />
    <TextView
        android:id="@+id/task_de_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Detailes"
        app:layout_constraintStart_toEndOf="@id/task_de_backIcon"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_marginLeft="100dp"
        />

    <ImageView
        android:id="@+id/task_de_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_de_title"
        app:srcCompat="@drawable/splash_icon"
        android:layout_marginTop="60dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/list_border"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/task_de_img">
        <TextView
            android:id="@+id/task_de_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Meet Joshoep"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/task_de_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_de_name"
            android:text="27 Feb, 2018 | 04:00 PM"
            android:textSize="16sp"
            android:textColor="#676666"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/task_de_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_de_date"
            android:text="Have to meet him because i want to show him
             my latest app design in person."
            android:textSize="16sp"
            android:textColor="#474747"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/task_de_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/task_de_desc"
            android:text="Category:"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/task_de_cate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/task_de_desc"
            app:layout_constraintStart_toEndOf="@id/task_de_cate"
            android:text=" Friend"
            android:textSize="16sp"
            android:textColor="#1B1B1B"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>